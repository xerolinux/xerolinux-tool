--field="<b>Apply Pamac GUI Fix (*)</b>":fbtn "konsole --noclose -e sh '/usr/local/bin/data/rpmc'"  \
--field="<b>Enable Wayland Session</b>":fbtn "konsole --noclose -e sh '/usr/local/bin/data/xway'" \
